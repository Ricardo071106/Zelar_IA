# =================== CONFIGURAÇÕES DO BANCO DE DADOS ===================
# URL do banco de dados Neon (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database

# =================== CONFIGURAÇÕES DO TELEGRAM ===================
# Token do bot do Telegram (obrigatório)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =================== CONFIGURAÇÕES DO WHATSAPP ===================
# Configurações opcionais do WhatsApp
WHATSAPP_SESSION_PATH=./whatsapp_session

# =================== CONFIGURAÇÕES DE EMAIL ===================
# SendGrid (opcional)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Mailgun (opcional - alternativa ao SendGrid)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_domain.com

# =================== CONFIGURAÇÕES DE IA ===================
# OpenAI (opcional)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (opcional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =================== CONFIGURAÇÕES DE SEGURANÇA ===================
# Chave secreta para sessões (obrigatório)
SESSION_SECRET=your_session_secret_here

# =================== CONFIGURAÇÕES DO SERVIDOR ===================
# Porta do servidor (padrão: 8080 para AWS)
PORT=8080

# Ambiente (development/production)
NODE_ENV=production

# =================== CONFIGURAÇÕES DE LOG ===================
# Nível de log (debug, info, warn, error)
LOG_LEVEL=info

# =================== CONFIGURAÇÕES DE CORS ===================
# Domínios permitidos para CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# =================== CONFIGURAÇÕES DE RATE LIMITING ===================
# Limite de requisições por minuto
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100 